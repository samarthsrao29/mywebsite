// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Painting {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imageUrl    String
  likes       Int      @default(0)
  createdAt   DateTime @default(now())
  messages    Message[]
  likesList   Like[]
}

model Message {
  id          Int      @id @default(autoincrement())
  senderName  String?
  senderEmail String?
  phoneNumber String?
  content     String
  reply       String?
  createdAt   DateTime @default(now())
  paintingId  Int?
  painting    Painting? @relation(fields: [paintingId], references: [id])
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  isVerified Boolean   @default(false)
  otp        String?
  otpExpires DateTime?
  createdAt DateTime @default(now())
  resetToken String?
  resetTokenExpiry DateTime?
  likes     Like[]
}

model Like {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  painting   Painting @relation(fields: [paintingId], references: [id])
  paintingId Int
  createdAt  DateTime @default(now())

  @@unique([userId, paintingId])
}
